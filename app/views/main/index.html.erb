<div class="slider">
	<ul id="slides">
	    <li class="slide showing"></li>
	    <li class="slide"></li>
	    <li class="slide"></li>
	    <li class="slide"></li>
	    <li class="slide"></li>
	</ul>
	<div class="controls">
		<div class="arrows">
			<div class="left">
				<%= image_tag "left_arrow_slider", :id => "previous" %>
			</div>
			<%= image_tag "", :id => "pause" %>
			<div class="right">
				<%= image_tag "right_arrow_slider", :id => "next" %>
			</div>
		</div>
	</div>
</div>

<div class="last_products">
	<% @products.each do |product| %>
		<div class="product">
			<div class="product_img">
				<%= link_to (image_tag product.picture.url), product_path(product) %>
			</div>
			<div class="product_discription">
				<div class="product_name"> 
					<%= product.name %>
				</div>
				<div class="product_cost"> 
					<%= product.cost %>
				</div>
			</div>
		</div>
	<% end %>
</div>
