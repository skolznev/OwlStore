<%= form_for @product do |f| %>
<div class="form_product">
	<% if @product.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:
			</h2>
			<ul>
				<% @product.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</p>
	<hr>
	<p>
		<%= f.label :discription %><br>
		<%= f.text_area :discription %>
	</p>
	<hr>
	<p>
		<%= f.label :type_product %><br>
		<%= f.select :type_product, ['Обувь', 'Футболки', 'Рюкзаки']%>
	</p>
	<hr>
	<p>
		<%= f.label :season %><br>
		<%= f.select :season, ['Лето', 'Осень', 'Зима', 'Весна']%>
	</p>
	<hr>
	<p>
		<%= f.label :sex %><br>
		<%= f.select :sex, ['М', 'Ж']%>
	</p>
	<hr>
	<p>
		<%= f.label :size %><br>
		<%= f.select :size, ['36', '41', '46']%>
	</p>
	<hr>
	<p>
		<%= f.label :color %><br>
		<%= f.select :color, ['красный', 'черный', 'зеленый']%>
	</p>
	<hr>
	<p>
		<%= f.label :picture %><br>
		<%= f.file_field :picture %>
	</p>
	<hr>
	<p>
		<%= f.label :cost %><br>
		<%= f.text_field :cost %>
	</p>
	<hr>
	<p>
		<%= f.label :discount %><br>
		<%= f.text_field :discount %>
	</p>
	<hr>
	<p>
		<%= f.submit %>
	</p>
</div>	
<% end %>