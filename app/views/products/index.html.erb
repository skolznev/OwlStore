<h1>Listing product</h1>

<%= link_to "Add product", new_product_path %>
<%= link_to "Main", root_path %>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Discription</th>
    <th>Color</th>
    <th>Picture</th>
  </tr>
 
  <% @products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td><%= product.name %></td>
      <td><%= product.discription %></td>
      <td><%= product.color %></td>
      <td><%= image_tag product.picture.url %></td>
      <td><%= link_to 'Show', product_path(product) %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= button_to 'Delete', product_path(product), 
                                method: :delete %></td>
    </tr>
  <% end %>
</table>