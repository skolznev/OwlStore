<hr>
<div class="admin_panel">
  <div class="add_product">
      <%= link_to "Добавить продукт", new_product_path %>
  </div>
<hr>
  <table>
    <tr>
      <th>ID</th>
      <th>Type</th>
      <th>Name</th>
      <th>Discription</th>
      <th>Sex</th>
      <th>Season</th>
      <th>Size</th>
      <th>Color</th>
      <th>Cost</th>
      <th>Discount</th>
      <th>Picture</th>
      <th>S</th>
      <th>E</th>
      <th>D</th>
    </tr>
   
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.type_product %></td>
        <td><%= product.name %></td>
        <td><%= product.discription %></td>
        <td><%= product.sex %></td>
        <td><%= product.season %></td>
        <td><%= product.size %></td>
        <td><%= product.color %></td>
        <td><%= product.cost %></td>
        <td><%= product.discount %></td>
        <td><%= image_tag product.picture.url %></td>
        <td><%= link_to 'Показать', product_path(product) %></td>
        <td><%= link_to 'Изменить', edit_product_path(product) %></td>
        <td><%= button_to 'Удалить', product_path(product), 
                                  method: :delete %></td>
      </tr>
    <% end %>
  </table>
</div>