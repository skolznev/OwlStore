<hr>
<div class="admin_panel">
  <div class="add_product">
      <%= link_to "Добавить продукт", new_product_path %>
  </div>

  <table>
    <tr>
      <th>ID</th>
      <th>Type</th>
      <th>Name</th>
      <th>Discription</th>
      <th>Color</th>
      <th>Picture</th>
    </tr>
   
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.type_product %></td>
        <td><%= product.name %></td>
        <td><%= product.discription %></td>
        <td><%= product.color %></td>
        <td><%= image_tag product.picture.url %></td>
        <td><%= link_to 'Show', product_path(product) %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= button_to 'Delete', product_path(product), 
                                  method: :delete %></td>
      </tr>
    <% end %>
  </table>
</div>